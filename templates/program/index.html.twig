{% extends 'layout/base.html.twig' %}

{% block name %}Hello RadioController!{% endblock %}

{% block body %}



{% if  programs|length > 0  %} 
	<h1 class="mb-4 text-center text-muted" > {{ pluralize(programs|length, 'Annonce' , 'Annonces')  }}  </h1>
	 {% for row in programs|batch(4) %}
		<div class="row mb-5">
			{% for program in row %}
			<div  class="col-md-3" >
				<article  class="advert bg-white rounded shadow" >

					<div  class="mw-100 rounded-top overflow-hidden" >
						<a href="{{path('app_programs_show', {id: program.id})}}"> 
							<img src="{{ (program.imageName ? vich_uploader_asset(program) : asset('uploads/programs/program_default.PNG'))| imagine_filter('advert_filter_square_medium') }}" alt="{{ program.name }}" class="w-100 ">
						</a>
					</div>
						<h2  class="h5 pl-3 pt-1">  <a href="{{path('app_programs_show', {id: program.id})}}" class=" text-muted text-decoration-none text-secondary" >  {{program.name}} </a> </h2> 
				
						<p  class="pd-2 pb-2 text-muted" >  Submitted at {{program.createdAt|ago}} by AUTHOR_NAME</p>


				</article>
			</div>
			{% endfor  %}
		</div>
	{% endfor  %}

{% endif  %}
{% endblock %}
