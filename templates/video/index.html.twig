{% extends 'layout/base.html.twig' %}

{% block title 'All the videos availale' %}

{% block body %}


{% if  videos|length > 0  %} 
	<h1 class="mb-4 text-center text-muted" > {{ pluralize(videos|length, 'Pin' , 'Pins')  }}  </h1>
	{% for row in videos|batch(3) %}
		<div class="row mb-5">
			{% for video in row %}
			<div  class="col-md-4" >
				<article  class="pin bg-white rounded shadow" >

					<div  class="mw-100 rounded-top overflow-hidden" >
						<video controls="controls" src="/examples/video/shuttle.mp4">
							Your browser does not support the HTML5 Video element.
						</video>
					</div>
						<h2  class="h5 pl-3 pt-1">  <a href="{{path('app_videos_show', {id: pin.id})}}" class=" text-muted text-decoration-none text-secondary" >  {{pin.title}} </a> </h2> 
						<p  class="pd-2 pb-2 text-muted"> {{video.title }} </p>
						<p  class="pd-2 pb-2 text-muted" >  Submitted at {{video.createdAt|ago}} by {{video.user.fullName}}</p>


				</article>
			</div>
			{% endfor  %}
		</div>
	{% endfor  %}

{% else   %}
	<p class="mt-5 h1 text-center"> No pin yet.    <a href="{{path('app_videos_create')}}"> Be the first! </a> </p>
{% endif  %}

{% endblock %}
