{% extends 'layout/base.html.twig' %}

{% block title %}Bienvenu(e) a la 92.4 rie.fm {% endblock %}

{% block body %}

			
			    <div  class="col-md-1" >
				</div>
				<div  class="col-md-7" >
					<section id="about">
						<div class="container wow fadeInUp">
							<div class="row">
								<div class="col-md-12  text-center">
								
									<div class="section-title-divider"></div>
									<p class="section-description"></p>
								</div>
							</div>
						</div>
						<div class="container about-container wow fadeInUp">
							<div class="row">
								<div class="about-content">
									<h2 class="about-title">{{'about.part1'|trans}}</h2>
									<p class="about-text">
										{{'about.part2'|trans}}
									</p>
								
									<p class="about-text">
										{{'about.part3'|trans}}
									</p>
									<p class="about-text">
										{{'about.part4'|trans}}
									</p>
									<p class="about-text">
										{{'about.part5'|trans}}
									</p>
									<p class="about-text">
										{{'about.part6'|trans}}
									</p>
									<p class="about-text">
										<b>
										{{'about.part7'|trans}}
										</b>
										<hr/>
										<b>
										{{'about.part8'|trans}}
										</b>
									</p>
								</div>
							</div>
						</div>
					</section>

					<section>

							{% if  users|length > 0  %} 
								<h1 class="mb-2 text-center text-muted" > Our Team  </h1>
								<div class="row m-3 p-3">
								{% for row in users|batch(4) %}
										{% for user in row %}
										<div  class="col-md-3" >
											<article  class="bg-white  shadow  text-center" >
												<div  class="mw-10 rounded-top overflow-hidden" >
													{% if user.avatar is not null and user.avatar is defined  %}
														<img src="{{ user.avatar(120) }}" class="shadow rounded-circle" alt=" {{user.fullName}} " />
													{%  else  %}
														<img src="{{asset('uploads/team.png')}}" class="shadow rounded-circle" alt=" " />
													{% endif %}
													<h4 class="capitale">{{ user.fullName }}  </h4>
												</div>
											</article>
										</div>
										{% endfor %}
								{% endfor %}
								</div>
							{% endif  %}
	
					</section>
				</div>
				<div  class="col-md-3" >
					<div class="clearfix content">
							<div class="text-muted"><h2>Latest Podcasts/Meditations</h2></div>
						
							{% for video in videos %}
								<div class="clearfix single_content">
									<div class="clearfix post_detail">	
										<article  class="advert bg-white rounded" >
													<iframe class="text-center" width="90%"  src="{{video.url}}" title="{{video.title}}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen>
													</iframe>
													
											</article>	
									</div>
								</div>
							{% endfor %}		
					</div>
				</div>
				
				<div  class="col-md-1">
				</div>
			
	
				
		 

{% endblock %}
