{% extends 'layout/base.html.twig' %}

{% block body %}

<div class="row">

    <div class=" mt-4 col-4 mx-auto example-wrapper">
        <ol class="list-group list-group-numbered">
         {% for cat in categories %}
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <div class="ms-2 me-auto">
                <div class="fw-bold">{{cat.name}}</div>
               
                </div>
                <span class="badge bg-warning rounded-pill">{{cat.users|length}} abones</span>
                 <span class="badge bg-primary rounded-pill">{{cat.items|length}} nouvelles</span>
            </li>
        {% endfor %}	
        </ol>
    </div>
</div>
{% endblock %}
